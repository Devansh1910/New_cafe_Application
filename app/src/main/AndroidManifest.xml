<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cafe"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="GCafe.Activities.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Cafe.Actionbar." />

        <activity
            android:name="GCafe.Activities.CategoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Cafe.Actionbar." />
        <activity
            android:name="GCafe.Activities.PaymentActivity"
            android:exported="false"
            android:label="Payment"
            android:theme="@style/Theme.Cafe.Actionbar." />
        <activity
            android:name="GCafe.Activities.CheckoutActivity"
            android:exported="false"
            android:label="Checkout"
            android:theme="@style/Theme.Cafe.Actionbar." />
        <activity
            android:name="GCafe.Activities.CartActivity"
            android:exported="false"
            android:label="Food Cart"
            android:theme="@style/Theme.Cafe.Actionbar." />
        <activity
            android:name="GCafe.Activities.ProductDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Cafe.Actionbar." />
        <activity
            android:name="GCafe.Activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>